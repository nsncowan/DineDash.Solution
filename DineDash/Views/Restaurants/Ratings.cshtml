@{
  Layout = "_Layout";
}

@using DineDash.Models;
@model List<DineDash.Models.Restaurant>;
  <h1>Restaurant Ratings</h1>

@if (@Model.Count == 0)
{
  <h3>No Ratings</h3>
} 
<ul>
@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new{ id = restaurant.RestaurantId}) | @restaurant.Rating</li>;
}
</ul>